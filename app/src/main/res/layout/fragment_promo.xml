<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/fondo_madera"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/MiTextoCardViews"
    tools:context="com.example.gep.rotinegocio.fragment.PromoFragment">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardBackgroundColor="#80000000"
        android:id="@+id/card_promociones"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/text_promocion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Promoción:"
                android:textSize="18sp" />

            <View
                android:id="@+id/rectangle_2"
                android:layout_width="342dp"
                android:layout_height="52dp"
                android:layout_alignStart="@+id/text_promocion"
                android:layout_below="@+id/text_promocion"
                android:layout_marginTop="8dp"
                android:background="@drawable/rectangle_2"
                android:layout_marginBottom="8dp"/>


            <EditText
                android:layout_width="342dp"
                android:layout_height="52dp"
                android:layout_alignStart="@+id/rectangle_2"
                android:layout_alignTop="@+id/rectangle_2"
                android:hint="acá va la PROMO" />


            <TextView
                android:id="@+id/text_vigencia"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/text_promocion"
                android:layout_below="@+id/rectangle_2"
                android:layout_marginTop="8dp"
                android:text="Vigencia" />

            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/text_comienza_promo"
                android:layout_alignStart="@id/text_promocion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_vigencia"
                android:text="Comienza:"
                />

            <View
                android:layout_marginTop="8dp"
                android:layout_marginStart="72dp"
                android:layout_width="100dp"
                android:layout_height="52dp"
                android:id="@+id/rectangle_fecha_inicio"
                android:background="@drawable/rectangle_2"
                android:layout_below="@+id/text_comienza_promo"
                />

            <EditText
                android:id="@+id/edit_text_promo_inicia"
                android:layout_width="100dp"
                android:layout_height="52dp"
                android:layout_alignStart="@+id/rectangle_fecha_inicio"
                android:layout_alignTop="@+id/rectangle_fecha_inicio"
                android:hint="DD/MM/AAAA" />

            <TextView
                android:layout_marginTop="8dp"
                android:layout_alignStart="@id/text_promocion"
                android:id="@+id/text_termina_promo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rectangle_fecha_inicio"
                android:text="Finaliza:"
                />

            <View
                android:layout_marginTop="8dp"
                android:layout_marginStart="72dp"
                android:layout_width="100dp"
                android:layout_height="52dp"
                android:id="@+id/rectangle_fecha_termino"
                android:background="@drawable/rectangle_2"
                android:layout_below="@+id/text_termina_promo"
                />


            <EditText
                android:id="@+id/edit_text_promo_termina"
                android:layout_width="100dp"
                android:layout_height="52dp"
                android:layout_alignStart="@+id/rectangle_fecha_termino"
                android:layout_alignTop="@+id/rectangle_fecha_termino"
                android:hint="DD/MM/AAAA" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/botonconfirmar"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/rectangle_fecha_termino"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>
